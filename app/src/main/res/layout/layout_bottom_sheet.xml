<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/bottom_sheet_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:layout_marginHorizontal="24dp"
    >

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginHorizontal="100dp"
        android:background="@drawable/divider_background"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />


    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description"
        android:inputType="text"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/et_custom_bis"
        android:padding="10dp"
        />


    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_valeur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/valeur_indicate"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/et_custom_bis"
            android:padding="10dp"
            android:layout_weight="1"
            />

        <Switch
            android:id="@+id/mensuel_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mensuel"
            />

    </LinearLayout>



    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jour"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mois"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/annee"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/day_picker"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:theme="@style/NumberPickerTheme"
            android:background="@drawable/et_custom_bis"
            />

        <NumberPicker
            android:id="@+id/month_picker"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:theme="@style/NumberPickerTheme"
            android:background="@drawable/et_custom_bis"
            />

        <NumberPicker
            android:id="@+id/year_picker"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:theme="@style/NumberPickerTheme"
            android:background="@drawable/et_custom_bis"
            />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/btn_valider"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/validate"
        android:background="@drawable/next_btn"
        android:layout_marginHorizontal="80dp"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

</LinearLayout>